<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".MusicalInstruments">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_height="200dp"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="26dp"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient2"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="13dp"
            android:layout_height="146dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/veena" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:justificationMode="inter_word"
            android:text="The veena is among the oldest of Indian musical instruments.The Saraswati veena is the predominant Carnatic music and the Rudra veena the most played veena in Hindustani music.The veena is said to be the only instrument that can play all the gamakas (oscillations) in Carnatic music.
 " />


    </LinearLayout>



    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="play1"
        android:text="Play Veena" />
    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
        android:layout_height="200dp"
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="26dp"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient4"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="13dp"
                android:layout_height="117dp"
                android:layout_weight="1"

                android:padding="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/tabla" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:text="The tabla is the percussion instrument most commonly used in north Indian classical music.The instrument consists of two drums, called bayan (left) and dayan (right) as per the hand they are most commonly played with. " />
        </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play2"
                android:text="Play Tabla" />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="26dp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient3"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="13dp"
                    android:layout_height="113dp"
                    android:layout_weight="1"

                    android:padding="20dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/flute" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:justificationMode="inter_word"
                    android:text="Two main varieties of Indian flutes are currently used.The first, the Bansuri has 6 finger holes and one hole, and is used predominantly in the Hindustani music.The second,the Venu has eight finger holes,and is played in the Carnatic music." />
            </LinearLayout>
            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play3"
                android:text="Play Flute" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="26dp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient7"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="13dp"
                    android:layout_height="118dp"
                    android:layout_weight="1"

                    android:padding="10dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/viol" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:justificationMode="inter_word"
                    android:text="The violin, sometimes known as a fiddle, is a wooden chordophone in the violin family.They are most prominent in the Western classical tradition, both in ensembles and as solo instruments. Violins are also important in many varieties of folk music, including country music." />
            </LinearLayout>
            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play4"
                android:text="Play Violin" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="26dp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient5"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="13dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"

                    android:padding="10dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/harmonium" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:justificationMode="inter_word"
                    android:text="The harmonium is an instrument that has its origins in the period of British rule in India. It is a modified version of the reed organ, with keys like the piano and bellows to pump air into the instrument." />
            </LinearLayout>
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play5"
                android:text="Play Harmonium" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="26dp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient1"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="13dp"
                    android:layout_height="126dp"
                    android:layout_weight="1"

                    android:padding="10dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/tanpura" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:justificationMode="inter_word"
                    android:text="The tanpura is an instrument that acts as the reference chord in Indian classical music. It has a resonator and 4 strings, but no frets, as the notes are always played whole. " />
            </LinearLayout>
            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play6"
                android:text="Play Tanpura" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="26dp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient8"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:scaleType="fitStart"

                    app:srcCompat="@drawable/sarod" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:justificationMode="inter_word"
                    android:text="The sarod is a flute like instrument that has connections with the lute like instruments of the Christian era, the rudra veena and the Afghan rabab. It is made of a single block of wood, with a resonator, a neck that tapers down to a second resonator box." />
            </LinearLayout>
            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play7"
                android:text="Play Sarod" />
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_height="200dp"
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="26dp"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient6"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="88dp"
                android:layout_height="107dp"
                android:layout_weight="1"
                android:padding="10dp"

                android:scaleType="fitStart"
                app:srcCompat="@drawable/mrid" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:text="The mridangam can be traced back to ancient Indian mythology, when it is believed that the sound it created matched and represented the movement and dances of the Gods!" />
        </LinearLayout>
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="play8"
            android:text="Play Mridangam" />
    </androidx.cardview.widget.CardView>


        </LinearLayout>

</ScrollView>